<div class="flex w-full bg-white h-fit rounded">
    <div class="w-12 flex flex-col items-center content-center bg-blue-100 gap-3 rounded-l">
        <button class="mt-3 text-green-400">
            <i class="fa-regular fa-circle-up fa-2xl"></i>
        </button>
        <span class="font-semibold text-sm"> <%= post.num_votes %> </span>
        <button class="text-green-400">
            <i class="fa-regular fa-circle-down fa-2xl"></i>
        </button>
    </div>
    <div class="w-full p-1">
        <a href="/user?=<%= post.user_id %>" class="">
            <header class="flex w-full gap-2 items-center p-2">
                <script type="text/javascript">document.write($.cloudinary.imageTag('<%- post.profile_img %>', 
                    {class: "w-8 h-8 rounded-full ring-1 ring-gray-300 overflow-hidden object-cover"}).toHtml());</script>
                <span class="text-xs text-gray-400"> Posted By <span class="font-semibold"> <%= post.username %> </span> </span>
            </header>
        </a>
        <div class="p-2">
            <h2 class="text-xl font-semibold mb-3"> <%= post.title %> </h2>
            <p class="text-sm">
                <%= post.title || "" %>
            </p>
        </div>
        <footer class="flex">
            <a href="/replies?=<%= post.content_id %>" class="flex items-center gap-1 p-2 ml-1 mt-1 rounded-sm text-gray-400 hover:bg-gray-100">
                <i class="fa-regular fa-comment fa-lg"></i>
                <span class="text-xs font-bold"> 0 Comments </span>
            </a>
            <button class="flex items-center gap-2 p-2 mt-1 rounded-sm text-gray-400 hover:bg-gray-100">
                <i class="fa-regular fa-bookmark fa-lg"></i>
                <span class="text-xs font-bold"> Bookmark </span>
            </button>
        </footer>
    </div>
</div>